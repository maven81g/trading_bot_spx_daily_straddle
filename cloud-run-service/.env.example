# Trading Bot - Environment Variables Template
# Copy this file to .env and fill in your values for local development

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
REGION=us-central1

# Application Configuration
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# Trading Configuration
PAPER_TRADING=true
DEMO_MODE=false
MAX_DAILY_LOSS=1000
MAX_DRAWDOWN=2000
MAX_POSITIONS=5

# TradeStation API Credentials (for local development only)
# In production, these come from Google Secret Manager
TRADESTATION_CLIENT_ID=your_tradestation_client_id
TRADESTATION_CLIENT_SECRET=your_tradestation_client_secret
TRADESTATION_REFRESH_TOKEN=your_tradestation_refresh_token

# TradeStation API Configuration
TRADESTATION_BASE_URL=https://sim-api.tradestation.com/v3
TRADESTATION_AUTH_URL=https://signin.tradestation.com
TRADESTATION_REDIRECT_URI=http://localhost:3000/callback

# Logging Configuration
LOG_FILE=./logs/trading-bot.log

# Optional: BigQuery Configuration (if using historical option data)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
BIGQUERY_PROJECT_ID=your-bigquery-project
BIGQUERY_DATASET_ID=option_data
BIGQUERY_TABLE_ID=spx_options

# Docker Build Configuration
DOCKER_BUILDKIT=1