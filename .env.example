# SPX Straddle Bot Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# TradeStation API Configuration (Required)
# =============================================================================
TRADESTATION_CLIENT_ID=your_client_id_here
TRADESTATION_CLIENT_SECRET=your_client_secret_here
TRADESTATION_REFRESH_TOKEN=your_refresh_token_here
TRADESTATION_ACCOUNT_ID=your_account_id_here

# API Endpoints (Optional - defaults provided)
TRADESTATION_API_URL=https://sim-api.tradestation.com/v3
TRADESTATION_STREAMING_URL=https://sim-api.tradestation.com/v3/marketdata/stream
TRADESTATION_SANDBOX=true

# =============================================================================
# Trading Strategy Configuration
# =============================================================================
# SPX symbol for streaming data
SPX_SYMBOL=$SPXW.X

# Entry time in ET (24-hour format)
ENTRY_TIME=13:46

# Profit target as percentage (e.g., 20 = 20%)
TARGET_PROFIT=20

# Stop loss as percentage (leave empty for no stop loss)
# STOP_LOSS=50

# Exit time in ET (24-hour format)
EXIT_TIME=15:50

# Maximum position value in dollars
MAX_POSITION_VALUE=10000

# Paper trading mode (set to false for live trading)
PAPER_TRADING=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/straddle-bot.log

# For debug logging, set LOG_LEVEL=debug above

# =============================================================================
# Google Cloud / BigQuery Configuration (Optional)
# =============================================================================
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# BIGQUERY_DATASET=spx_straddle

# =============================================================================
# Notification Configuration
# =============================================================================

# Discord Notifications (Optional)
# Create a Discord webhook in your server settings
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url
# DISCORD_USER_ID=your-user-id-for-critical-mentions

# Mailgun Email Notifications (Optional but Recommended)
# Sign up at https://mailgun.com for API credentials
# For testing: Use sandbox domain (e.g., sandbox-abc123def456.mailgun.org)
# For production: Use your custom domain
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=sandboxabd41b3728e64b64bd08b04b93c7d783.mailgun.org
MAILGUN_FROM=ulises81g@gmail.com
MAILGUN_TO=ulises81g@gmail.com

# Pushover Mobile Notifications (Optional)
# Sign up at https://pushover.net for user key and create an app for API token
# PUSHOVER_USER_KEY=your-pushover-user-key
# PUSHOVER_API_TOKEN=your-pushover-api-token

# System Heartbeat Monitoring (Optional)
# Webhook URL for system health monitoring
# HEARTBEAT_WEBHOOK_URL=https://your-monitoring-service.com/webhook

# =============================================================================
# Cloud Run Configuration (For Cloud Deployment)
# =============================================================================
# Set to true when running in Google Cloud Run
RUNNING_IN_CLOUD=false

# Port for Cloud Run (automatically set by Google Cloud)
# PORT=8080
