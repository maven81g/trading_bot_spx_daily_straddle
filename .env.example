# TradeStation API Configuration
# Copy this file to .env and fill in your actual values

# Required: TradeStation API Credentials (get from TradeStation developer portal)
TRADESTATION_CLIENT_ID=your_client_id_here
TRADESTATION_CLIENT_SECRET=your_client_secret_here

# Optional: API URLs (defaults to simulation environment)
TRADESTATION_BASE_URL=https://sim-api.tradestation.com/v3
TRADESTATION_AUTH_URL=https://signin.tradestation.com
TRADESTATION_REDIRECT_URI=http://localhost:3000/callback

# PREFERRED: Use refresh token for authentication (avoids OAuth handshake)
# Get this from TradeStation API after initial OAuth flow
TRADESTATION_REFRESH_TOKEN=your_refresh_token_here

# Alternative: Authorization code (can also pass via command line)
# TRADESTATION_AUTH_CODE=your_auth_code_here

# Environment (simulation or production)
TRADESTATION_ENV=simulation
