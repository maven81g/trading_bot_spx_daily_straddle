# TradeStation API Configuration (Simplified)
# Copy this to .env and fill in your actual values

# TradeStation API Credentials
TRADESTATION_CLIENT_ID=your_client_id_here
TRADESTATION_CLIENT_SECRET=your_client_secret_here
TRADESTATION_REFRESH_TOKEN=your_refresh_token_here

# Trading Configuration
PAPER_TRADING=true
EMAIL_NOTIFICATIONS=false

# Risk Management
MAX_DAILY_LOSS=1000
MAX_DRAWDOWN=2000
MAX_POSITIONS=5

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/trading-bot.log