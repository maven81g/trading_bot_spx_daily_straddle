# TradeStation API Configuration (Consolidated Bot)
# Copy this to .env and fill in your actual values

# TradeStation API Credentials
TRADESTATION_CLIENT_ID=your_client_id_here
TRADESTATION_CLIENT_SECRET=your_client_secret_here
TRADESTATION_REFRESH_TOKEN=your_refresh_token_here

# Optional: Specific account ID (if you have multiple accounts)
# TRADESTATION_ACCOUNT_ID=your_account_id_here

# API Configuration
TRADESTATION_API_URL=https://sim-api.tradestation.com/v3
TRADESTATION_SANDBOX=true

# Trading Configuration
PAPER_TRADING=true

# Cloud Run Configuration (for deployment)
RUNNING_IN_CLOUD=false
PORT=8080

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/trading-bot.log