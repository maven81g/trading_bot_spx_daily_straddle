# SPX Straddle Trading Bot Configuration
# Copy this to .env and fill in your actual values

# TradeStation API Credentials
TRADESTATION_CLIENT_ID=your_client_id_here
TRADESTATION_CLIENT_SECRET=your_client_secret_here
TRADESTATION_REFRESH_TOKEN=your_refresh_token_here

# Optional: Specific account ID (if you have multiple accounts)
# TRADESTATION_ACCOUNT_ID=your_account_id_here

# API Configuration
TRADESTATION_API_URL=https://sim-api.tradestation.com/v3
TRADESTATION_STREAMING_URL=https://sim-api.tradestation.com/v3/marketdata/stream
TRADESTATION_SANDBOX=true

# Straddle Strategy Configuration
SPX_SYMBOL=$SPXW.X
ENTRY_TIME=09:33
TARGET_PROFIT=20
# STOP_LOSS=50  # Optional - uncomment to enable stop loss
EXIT_TIME=15:50
MAX_POSITION_VALUE=10000

# Trading Configuration
PAPER_TRADING=true

# BigQuery Configuration (Optional - for trade storage)
# GOOGLE_CLOUD_PROJECT=your_project_id
# BIGQUERY_DATASET=spx_straddle

# Cloud Run Configuration (for deployment)
RUNNING_IN_CLOUD=false
PORT=8080

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/straddle-bot.log
TESTING=false